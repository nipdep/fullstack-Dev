import React from 'react';
import ReactDOM from 'react-dom';

const App = () => {
    const course = {
        name: 'Half Stack application development',
        parts: [
          {
            name: 'Fundamentals of React',
            exercises: 10
          },
          {
            name: 'Using props to pass data',
            exercises: 7
          },
          {
            name: 'State of a component',
            exercises: 14
          }
        ]
      }
  
    return (
      <div>
        <Header name = {course}/>
        <Content arr = {course} />
        <Total size = {course} />
      </div>
    )
  }


  const Header = (props) => {
    return(
        <h1>{props.name.name}</h1>
    )
}

const Content = (props) => {
    return(
        <div>
            <Part obj = {props.arr.parts[0]}></Part>
            <Part obj = {props.arr.parts[1]}></Part>
            <Part obj = {props.arr.parts[2]}></Part>
        </div>
    )
}

const Part = (props) => {
    return(
        <p>
            {props.obj.name} {props.obj.exercises}
        </p>
    )
}

const Total = (props) => {
    return(
        <p>Number of exercises {props.size.parts[0].exercises.exercises + props.size.parts[1].exercises.exercises + props.size.parts[2].exercises.exercises}</p>
    )
}

ReactDOM.render(<App />,document.getElementById('root'))
